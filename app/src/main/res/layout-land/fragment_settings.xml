<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/blue"
    tools:context=".view.ui.settings.SettingsFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView_CreateEventLogo"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Switch
        android:id="@+id/switchLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="40dp"
        android:text="Show location on profile"
        android:textColor="@color/yellow"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPrivacy" />

    <Switch
        android:id="@+id/switchName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show name on profile"
        android:textColor="@color/yellow"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="80dp"
        app:layout_constraintTop_toBottomOf="@+id/switchLocation"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Switch
        android:id="@+id/switchEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show email on profile"
        android:textColor="@color/yellow"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="80dp"
        app:layout_constraintTop_toBottomOf="@+id/switchName"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Switch
        android:id="@+id/switchAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show age on profile"
        android:textColor="@color/yellow"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="80dp"
        app:layout_constraintTop_toBottomOf="@+id/switchEmail"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id="@+id/textViewPrivacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/archivo_black"
        android:text="Privacy"
        android:textColor="@color/yellow"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_CreateEventLogo" />

